<!DOCTYPE html>
<html lang="en">
<head>
  <title>Dashboard</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f4f4;
      background-image: url('/images/dashboard.ejs.jpg');
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center center;
      padding: 40px;
      margin: 0;
      text-align: center;
    }

    .dashboard-container {
      width: 90%;
      max-width: 1200px;
      margin: 0 auto;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .time-now {
      font-weight: 600;
      font-size: 18px;
      color: #007bff;
      background-color: #fff;
      border: 3px solid #007bff;
      padding: 8px 16px;
      border-radius: 12px;
      font-family: 'Segoe UI Semibold', 'Segoe UI', sans-serif;
      box-shadow: 0 0 5px rgba(0,0,0,0.05);
    }

    .logout-btn {
      padding: 10px 20px;
      font-size: 16px;
      background-color: #dc3545;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .logout-btn:hover {
      background-color: #c82333;
    }

    h2 {
      font-size: 32px;
      color: #333;
      margin-bottom: 10px;
    }

    h4 {
      color: #555;
      margin-top: 5px;
      margin-bottom: 30px;
    }

    .total-spent {
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 20px;
      color: #333;
    }

    .btn {
      padding: 8px 12px;
      font-size: 14px;
      text-decoration: none;
      border-radius: 4px;
      margin: 0 2px;
    }

    .btn-success {
      background-color: #28a745;
      color: white;
    }

    .btn-overview {
      background-color: #f4511e;
      color: white;
    }

    .btn-filter {
      background-color: #17a2b8;
      color: white;
    }

    .btn-edit {
      background-color: #ffc107;
      color: black;
    }

    .btn-delete {
      background-color: #dc3545;
      color: white;
    }

    .header-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 30px auto 10px;
      width: 100%;
    }

    .header-row h3 {
      margin: 0;
      font-size: 24px;
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      margin-bottom: 20px;
      border: 3px solid #007bff;
      border-radius: 12px;
      overflow: hidden;
    }

    th, td {
      padding: 12px;
      border: 1px solid #ccc;
    }

    th {
      background-color: #007bff;
      color: white;
    }

    /* Rounded corners for outer edges */
    table thead tr th:first-child {
      border-top-left-radius: 12px;
    }

    table thead tr th:last-child {
      border-top-right-radius: 12px;
    }

    table tbody tr:last-child td:first-child {
      border-bottom-left-radius: 12px;
    }

    table tbody tr:last-child td:last-child {
      border-bottom-right-radius: 12px;
    }

    .category-badge {
      padding: 5px 12px;
      border-radius: 12px;
      font-weight: bold;
      display: inline-block;
      color: white;
    }

    .category-transport {
      background-color: #007bff;
    }

    .category-food {
      background-color: #28a745;
    }

    .category-shopping {
      background-color: #ffc107;
      color: black;
    }

    .category-other {
      background-color: #fd7e14;
    }
  </style>
</head>
<body>

  <div class="dashboard-container">

    <!-- Top Bar -->
    <div class="top-bar">
      <div class="time-now" id="timeNow">Time: --:--:--</div>
      <a href="/logout" class="logout-btn">Logout</a>
    </div>

    <!-- Greeting -->
    <h2>Welcome, <%= user.username %>!</h2>
    <h4>Today: <%= today %></h4>

    <!-- Total + Buttons -->
    <div class="total-spent">
      Total Spent: $<%= totalSpent %>
      <a href="/add" class="btn btn-success">‚ûï Add</a>
      <a href="/overview" class="btn btn-overview">üìä Overview</a>
    </div>

    <!-- Expenses Header Row -->
    <div class="header-row">
      <h3>Your Expenses</h3>
      <a href="/search" class="btn btn-filter">üîç Filter</a>
    </div>

    <!-- Table -->
    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th>Amount ($)</th>
          <th>Category</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% expenses.forEach(item => { %>
          <tr>
            <td><%= item.description %></td>
            <td>$<%= Number(item.amount).toFixed(2) %></td>
            <td>
              <% if (item.category === 'Transport') { %>
                <span class="category-badge category-transport">Transport</span>
              <% } else if (item.category === 'Food') { %>
                <span class="category-badge category-food">Food</span>
              <% } else if (item.category === 'Shopping') { %>
                <span class="category-badge category-shopping">Shopping</span>
              <% } else { %>
                <span class="category-badge category-other"><%= item.category %></span>
              <% } %>
            </td>
            <td>
              <a href="/edit/<%= item.id %>" class="btn btn-edit">Edit</a>
              <a href="/delete/<%= item.id %>" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>

  <!-- Live Time Script -->
  <script>
    function updateTime() {
      const now = new Date();
      const timeString = now.toLocaleTimeString('en-GB', { hour12: false });
      document.getElementById('timeNow').innerText = 'Time: ' + timeString;
    }
    setInterval(updateTime, 1000);
    updateTime();
  </script>

</body>
</html>

