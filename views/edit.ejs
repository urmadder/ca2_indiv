<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Expense</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-image: url('/images/edit.jpg');
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      background-attachment: fixed;
    }

    .container {
      background-color: rgba(255, 255, 255, 0.95);
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
      max-width: 700px;
    }
  </style>
</head>

<body class="p-4 d-flex justify-content-center align-items-start" style="min-height: 100vh;">
  <div class="container mt-5">

    <!-- Header and Expense Summary -->
    <h2>Edit Expense</h2>
    <p class="text-muted">
      Editing: "<strong><%= expense.description %></strong>" â€” $<%= expense.amount %> in <%= expense.category %> on <%= expense.date.toISOString().slice(0, 10) %>
    </p>

    <!-- Form -->
    <form action="/edit/<%= expense.id %>" method="POST">
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input type="text" name="description" class="form-control" value="<%= expense.description %>" required>
      </div>

      <div class="mb-3">
        <label for="amount" class="form-label">Amount</label>
        <input type="number" name="amount" step="0.01" min="0" class="form-control" value="<%= expense.amount %>" required>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="category" class="form-select" required>
          <% ['Food', 'Transport', 'Shopping', 'Others'].forEach(cat => { %>
            <option value="<%= cat %>" <%= expense.category === cat ? 'selected' : '' %>><%= cat %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="date" class="form-label">Date</label>
        <input type="date" name="date" class="form-control" value="<%= expense.date.toISOString().slice(0, 10) %>" required>
      </div>

      <button type="submit" class="btn btn-primary">Update</button>
      <a href="/search" class="btn btn-secondary">Cancel</a>

      <!-- Optional Delete Button -->
      <a href="/delete/<%= expense.id %>" class="btn btn-danger ms-2" onclick="return confirm('Are you sure you want to delete this expense?')">Delete</a>
    </form>

  </div>
</body>
</html>
